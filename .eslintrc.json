{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "globals": {
    "Config": "readonly",
    "Utils": "readonly",
    "ProductService": "readonly",
    "CartService": "readonly",
    "NotificationService": "readonly",
    "LoadingScreen": "readonly",
    "ProductCard": "readonly",
    "CartSidebar": "readonly"
  }
}

